1.find the count number;
import java.util.Scanner;
public class Main{
    public static void main(String[] args){
        Scanner a = new Scanner(System.in);
        int num=a.nextInt();
        int count=0;
       while(num>0)
       {
           num=num/10;
           count++;
           
        }
         System.out.print(num);
      
    }
}

2.palindrom with numbers
import java.util.Scanner;
public class Main{
    public static void main(String[] args){
        Scanner a = new Scanner(System.in);
        int num=a.nextInt();
        int palin=num;
        int sum=0,digit;
        while(num>0)
        {
            digit=num%10;
            sum=sum=digit;
            num=num/10;{
              System.out.print(sum);
            }
        }
        
    }
}
